#lets generate one field and print it
exNum = 112341293.1234123
exNumStr = str(exNum)
top = "----"
mid = "| "
bot = "----"

for index in range(len(exNumStr)):
  top = top + "-"
  bot = bot + "-"
  mid = mid + exNumStr[index]
  
mid = mid + " |"

print(top)
print(mid)
print(bot)


