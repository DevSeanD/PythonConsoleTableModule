midStr = ""
dataList = [1,2,3,4,5,6,7,9,8]

sampleList = []

for index in range(50):
  sampleList.append(1.2341234954345)
  sampleList.append(1.234235)

numOfCol = 4
colCount = 1

#need to print border along the top of the table

for index in range(len(sampleList)):
  currLen = len(str(sampleList[index]))
  currStr = str(sampleList[index])

  if currLen != maxLen:
    for index in range(maxLen-currLen):
      currStr = currStr + ' '
  
  midStr = midStr.format(currStr)
  
  if colCount != numOfCol + 1:
    midStr = midStr + "| {} "
  if colCount == numOfCol + 1:
    midStr = midStr + "|" +'\n'
    colCount = 0
    
  colCount += 1
  #need to print border along the bottom of each line
  
print(midStr)
