"""
FileName = PythonTableModule.py

TODO:
  *Center the values in the fields
  *Add support for headings
"""
sampleList = []

for index in range(1,125):
  sampleList.append(str(index))

midStr = ""
numOfCol = 12
colCount = 1
maxLen = 0

for index in range(len(sampleList)):
  currLen = len(str(sampleList[index]))
  if currLen > maxLen:
    maxLen = currLen

for index in range(len(sampleList)):
  currLen = len(str(sampleList[index]))
  currStr = str(sampleList[index])

  if currLen != maxLen:
    for index in range(maxLen-currLen):
      currStr = currStr + ' '
  
  if colCount - 1 != numOfCol + 1:
    if index != len(sampleList):
      midStr += "| {} "
    if index == len(sampleList):
      midStr += "|    "

  if colCount == numOfCol + 1:
    midStr += "|" +'\n'
    colCount = 0

  midStr = midStr.format(currStr)
   
  colCount += 1

if colCount != numOfCol:
  for index in range((numOfCol + 2)-colCount):
    midStr += "|  "
    for index in range(maxLen):
      midStr += " "
  midStr += "|"
topAndBotStr = ""

splitMidStr = midStr.split('\n')
displayList = []


for line in splitMidStr:
  if line != '':
    displayList.append(line)

for index in range(len(splitMidStr[0])):
  topAndBotStr += "-"

print(topAndBotStr)
for line in displayList:
  print(line)
  print(topAndBotStr)
